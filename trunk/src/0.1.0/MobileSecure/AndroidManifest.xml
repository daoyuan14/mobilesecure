<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nupt.stitp"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<!-- 客户端主界面 -->
        <activity android:name=".MobileSecure"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 注册登录界面 -->
        <activity android:name=".LoginActivity">
		</activity>
		<!-- BackUp界面 -->
		<activity android:name=".BackupActivity">
		</activity>
		<!-- Wipe界面 -->
		<activity android:name=".WipeActivity">
		</activity>
		<!-- 锁机界面 -->
		<activity android:name=".LockActivity">
			<intent-filter>
                <action android:name="com.nupt.stitp.action.UNLOCK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<!-- Our Service -->
		<service android:name=".MobileSecService">
        </service>
        <!-- Receiver for SMS_RECEIVED -->
        <receiver android:name=".SMSReceiver" android:enabled="true">  
			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />  
			</intent-filter>
		</receiver>
    </application>
    <uses-sdk android:minSdkVersion="4" />
    <!-- 所需要的权限 -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.READ_CALENDAR" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />	<!-- 获取SIM卡号 -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
</manifest>